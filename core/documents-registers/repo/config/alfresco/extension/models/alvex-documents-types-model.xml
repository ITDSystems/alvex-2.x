<?xml version="1.0" encoding="utf-8" ?>
<!--
	Content model to represent Alvex default types of documents
	@since 1.3
 -->
 <model
	xmlns="http://www.alfresco.org/model/dictionary/1.0"
	name="alvexdr:documents_types_model"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.alfresco.org/model/dictionary/1.0 modelSchema.xsd">

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
		<import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl"/>
		<import uri="http://alvexcore.com/prefix/alvexdt" prefix="alvexdt"/>
	</imports>

	<namespaces>
		<namespace prefix="alvexdr" uri="http://alvexcore.com/prefix/alvexdr" />
	</namespaces>

	<types>
		<type name="alvexdr:documentRegister">
			<title>Document Register</title>
			<parent>dl:dataList</parent>
			<properties>
				<property name="alvexdr:idFormat">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
					<default>%{inc}</default>
				</property>
				<property name="alvexdr:inc">
					<type>d:int</type>
					<mandatory enforced='true'>true</mandatory>
					<default>1</default>
				</property>
				<property name="alvexdr:yearInc">
					<type>d:int</type>
					<mandatory enforced='true'>true</mandatory>
					<default>1</default>
				</property>
				<property name="alvexdr:quarterInc">
					<type>d:int</type>
					<mandatory enforced='true'>true</mandatory>
					<default>1</default>
				</property>
				<property name="alvexdr:monthInc">
					<type>d:int</type>
					<mandatory enforced='true'>true</mandatory>
					<default>1</default>
				</property>
				<property name="alvexdr:dayInc">
					<type>d:int</type>
					<mandatory enforced='true'>true</mandatory>
					<default>1</default>
				</property>
				<property name="alvexdr:dropDateTime">
					<type>d:datetime</type>
					<mandatory>false</mandatory>
				</property>
				<property name="alvexdr:createIdMode">
					<type>d:text</type>
					<default>combined</default>
					<constraints>
					<constraint name="alvexdr:createIdAllowedModes" type="LIST">
						<parameter name="allowedValues">
							<list>
								<value>combined</value>
								<value>auto</value>
								<value>manual</value>
							</list>
						</parameter>
					</constraint>
				</constraints>
				</property>
				<property name="alvexdr:allowIdEdit">
					<type>d:boolean</type>
					<default>false</default>
				</property>
			</properties>
			<associations>
				<association name="alvexdr:attachedMasterData">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>alvexdr:masterData</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>

		<type name="alvexdr:masterData">
			<title>MasterData config</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="alvexdr:masterDataTargetField">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
			</properties>
		</type>

		<type name="alvexdr:internalMasterData">
			<title>Internal masterData config</title>
			<parent>alvexdr:masterData</parent>
			<properties>
				<property name="alvexdr:masterDataDataListColumn">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
			</properties>
			<associations>
				<association name="alvexdr:masterDataDataList">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>dl:dataList</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>

		<type name="alvexdr:externalMasterData">
			<title>External masterData config</title>
			<parent>alvexdr:masterData</parent>
			<properties>
				<property name="alvexdr:masterDataURL">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
				<property name="alvexdr:masterDataDataRoot">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
				<property name="alvexdr:masterDataLabelField">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
				<property name="alvexdr:masterDataValueField">
					<type>d:text</type>
					<mandatory enforced='true'>true</mandatory>
				</property>
			</properties>
		</type>

	</types>
	
	<aspects>
		<aspect name="alvexdr:attachedToRegistryItem">
			<associations>
				<association name="alvexdr:parentRegister">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>alvexdt:object</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</aspect>
	</aspects>

</model>
