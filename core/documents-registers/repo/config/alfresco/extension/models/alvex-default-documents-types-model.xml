	<description>Alvex Default Company Documents Model</description>
	<author>ITD Systems</author>
	<published>2014-04-01</published>
	<version>1.2</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
